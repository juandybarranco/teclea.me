{% extends 'userBase.html.twig' %}

{% block body %}
    <div id="community" class="container">
        <div class="card">
            <div class="card-header bg-dark">
                <header>
                    <h3 class="cWhite">Nuevo Reporte</h3>
                </header>
            </div>
            <div class="card-body">
                <div class="col-md-10 m-auto mb-lg-5 mt-lg-3">
                    <div class="card">
                        <div class="card-body text-left">
                            "{{ message.message }}"
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    {% if error == 1 %}
                        <div class="alert alert-warning" role="alert">Ya has reportado este mensaje con anterioridad.</div>
                        <a href="{{ path('messageDetails', {'id': message.id }) }}" class="btn btn-dark"><span class="fa fa-arrow-left"> Volver</span></a>
                    {% elseif error == 2 %}
                        <div class="alert alert-success" role="alert">Mensaje reportado correctamente. Será revisado pronto. ¡Gracias!</div>
                        <a href="{{ path('messageDetails', {'id': message.id }) }}" class="btn btn-dark"><span class="fa fa-arrow-left"> Volver</span></a>
                    {% else %}
                        {{ form(form) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}