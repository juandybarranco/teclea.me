{% extends 'userBase.html.twig' %}

{% block title %}Listado de Reportes{% endblock %}

{% block body %}
    <div id="community" class="container">
        <div class="card">
            <div class="card-header bg-dark">
                <header>
                    <h2 class="cWhite">Reportes en tus Comunidades</h2>
                    <div class="col-md-10 m-auto">
                        <hr/>
                    </div>
                </header>
                <h1 class="cWhite">Sabemos que no puedes estar en todos los sitios a la vez, por eso te mostramos aquí los reportes producidos en tus comunidades.</h1>
            </div>
            <div class="card-body">
                <div class="card">
                    <div class="card-header bg-gray">
                        Reportes Activos ({{ reports | length }})
                    </div>

                    <div class="card-body">
                        {% if reports | length == 0 %}
                            <div>No tienes ningún reporte. ¡Enhorabuena!</div>
                        {% else %}
                            <ul class="list-group">
                                {% for r in reports %}
                                    <li class="list-group-item dflexblock">
                                        <div class="col-md-1 dflexblock m-auto">
                                            <span class="fa fa-warning"></span>
                                        </div>

                                        <div class="col-md-9 dflexblock">
                                            <a href="{{ path('viewReport', {'id': r.id }) }}" title="Ver reporte.">"{{ r.description }}"</a>
                                        </div>

                                        <div class="col-md-2 dflexblock">
                                            <a href="{{ path('viewReport', {'id': r.id }) }}" title="Ver reporte." class="btn btn-dark text-right"><span class="fa fa-arrow-right"> Detalles</span></a>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>

                <div class="card mt-lg-5">
                    <div class="card-header bg-gray">
                        Reportes Cerrados ({{ closed | length }})
                    </div>

                    <div class="card-body">
                        {% if closed | length == 0 %}
                            <div>No tienes ningún reporte. ¡Enhorabuena!</div>
                        {% else %}
                            <ul class="list-group">
                                {% for r in closed %}
                                    <li class="list-group-item dflexblock">
                                        <div class="col-md-1 dflexblock m-auto">
                                            <span class="fa fa-warning"></span>
                                        </div>

                                        <div class="col-md-9 dflexblock">
                                            <a href="{{ path('viewReport', {'id': r.id }) }}" title="Ver reporte.">"{{ r.description }}"</a>
                                        </div>

                                        <div class="col-md-2 dflexblock">
                                            <a href="{{ path('viewReport', {'id': r.id }) }}" title="Ver reporte." class="btn btn-dark text-right"><span class="fa fa-arrow-right"> Detalles</span></a>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}