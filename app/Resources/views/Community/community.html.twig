{% extends 'userBase.html.twig' %}

{% block body %}
    <div id="community" class="container">
        {% if access == 'default' %}
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <header>
                        <h2>{{ community.name }}</h2>
                        <hr/>
                    </header>
                    <h1>{{ community.description }}</h1>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        {{ form_start(msg) }}
                        <div id="newMessage" class="col-md-12 input-group">
                            <span class="input-group-addon"><span class="numberCount">256</span></span>
                            {{ form_widget(msg.message) }}
                            <span class="input-group-btn">{{ form_widget(msg.Enviar) }}</span>
                        </div>
                        {{ form_end(msg) }}
                    </div>

                    <div class="col-md-12">
                        {% for msg in messages %}
                            <div class="panel panel-default messages">
                                <div class="panel-heading smaller">
                                    <small>{{ msg.user.username }} - {{ msg.date | date('d-m-Y H:i') }}</small>
                                </div>
                                <div class="panel-body text-left flex">
                                    <div class="messageImage">
                                        <div class="image avatar95">
                                            {% if msg.user.image %}
                                                <img src="{{ asset('uploads/profileImages/' ~ msg.user.image) }}" alt="Imagen de {{ msg.user.username }}"/>
                                            {% else %}
                                                <img src="{{ asset('images/no-image.jpg') }}" alt="Imagen de {{ msg.user.username }}"/>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="col-md-12 message">
                                        {{ msg.message }}
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <div class="msgAnswers">
                                        <button class="btn btn-default">
                                            {% if msg.messageReply | length == 1%}
                                                <span>{{ msg.messageReply | length }} respuesta</span>
                                            {% else %}
                                                <span>{{ msg.messageReply | length }} respuestas</span>
                                            {% endif %}
                                        </button>
                                    </div>

                                    <div class="msgButtons">
                                        <button class="btn btn-sm btn-default"><span class="fa fa-reply"></span> Responder</button>
                                        <button class="btn btn-sm btn-default"><span class="fa fa-edit"></span> Editar</button>
                                        <button class="btn btn-sm btn-default"><span class="fa fa-exclamation-triangle"></span> Reportar</button>
                                    </div>
                                </div>

                                {% if msg.messageReply | length > 0 %}
                                    <div class="panel-body replies">
                                        {% for reply in msg.messageReply %}
                                            <div class="panel panel-default">
                                                <div class="panel-body text-left flex">
                                                    <div class="messageImage">
                                                        <div class="image avatar48">
                                                            {% if msg.user.image %}
                                                                <img src="{{ asset('uploads/profileImages/' ~ reply.user.image) }}" alt="Imagen de {{ reply.user.username }}"/>
                                                            {% else %}
                                                                <img src="{{ asset('images/no-image.jpg') }}" alt="Imagen de {{ reply.user.username }}"/>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 message">
                                                        {{ reply.message }}
                                                    </div>
                                                </div>
                                                <div class="panel-footer">
                                                    <div class="replyInfo small">
                                                        <span>{{ reply.user.username }} - {{ reply.date | date('d-m-Y H:i') }}</span>
                                                    </div>
                                                    <div class="replyButtons">
                                                        <button class="btn btn-sm btn-default"><span class="fa fa-edit"></span> Editar</button>
                                                        <button class="btn btn-sm btn-default"><span class="fa fa-exclamation-triangle"></span> Reportar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}

        {% endif %}
    </div>
{% endblock %}