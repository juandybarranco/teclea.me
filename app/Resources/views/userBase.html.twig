<html>
    <head>
        <title>{% block title %}tecleaME{% endblock %}</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="{{ asset('assets/css/font-awesome.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}" />
    </head>

    <body>

    <!-- Header -->
    <div id="header">
        <div class="top">

            <!-- Logo -->
            <div id="logo">
                <span class="image avatar48">
                    {% if user.image is null %}
                        <img src="{{ asset('images/no-image.jpg') }}" alt="Sin imagen." />
                    {% else %}
                        <img src="{{ user.image }}" alt="Imagen de Perfil de {{ user.username }}" />
                    {% endif %}
                </span>
                <h1 id="title">{{ user.username }}</h1>
                <p>
                    {% if user.personalMessage is not null %}
                        {{ user.personalMessage }}
                    {% endif %}
                </p>
            </div>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li><a href="{{ path('index') }}" id="top-link" class="skel-layers-ignoreHref"><span class="icon fa-home">Inicio</span></a></li>
                    <li class="dropdown">
                        <a href="#" class="skel-layers-ignoreHref"><span class="icon fa-id-card">Perfil</span></a>
                        <ul>
                            <li><a href="#"><span class="icon fa-user-circle">Ver perfil</span></a></li>
                            <li><a href="#"><span class="icon fa-pencil">Editar Perfil</span></a></li>
                            <li><a href="#"><span class="icon fa-envelope">Mensajes Privados</span></a></li>
                            <li><a href="{{ path('logout') }}"><span class="icon fa-sign-out">Cerrar Sesión</span></a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" id="about-link" class="skel-layers-ignoreHref"><span class="icon fa-bell">Notificaciones</span></a>
                        <ul>
                            <li><a href="#"><span class="icon fa-reply">Respuestas</span></a></li>
                            <li><a href="#"><span class="icon fa-user-plus">Seguidores</span></a></li>
                            <li><a href="#"><span class="icon fa-users">Comunidades</span></a></li>
                            <li><a href="#"><span class="icon fa-plus-circle">Ver todas</span></a></li>
                        </ul>
                    </li>
                    <li><a href="#" id="contact-link" class="skel-layers-ignoreHref"><span class="icon fa-question-circle">Ayuda</span></a></li>
                </ul>
            </nav>

        </div>

        <div class="bottom">

            <!-- Social Icons -->
            <ul class="icons">
                <li><a href="{{ path('logout') }}" class="icon fa-sign-out"><span class="label">Cerrar Sesión</span></a></li>
            </ul>

        </div>

    </div>

    <!-- Main -->
    <div id="main">
        <section class="three">
            {% block body %}{% endblock %}
        </section>
    </div>

    <!-- Footer -->
    <div id="footer">

        <!-- Copyright -->
        <ul class="copyright">
            <li>&copy; 2017 <a href="{{ path('index') }}">tecleaME</a>.</li><li>Desarrollado por: <a href="https://www.pedrojanula.xyz">Pedro José Anula</a></li>
        </ul>

    </div>

    <!-- Scripts -->
    <script src="{{ asset('assets/js/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/js/jquery.scrolly.min.js') }}"></script>
    <script src="{{ asset('assets/js/jquery.scrollzer.min.js') }}"></script>
    <script src="{{ asset('assets/js/skel.min.js') }}"></script>
    <script src="{{ asset('assets/js/util.js') }}"></script>
    <script src="{{ asset('assets/js/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('assets/js/main.js') }}"></script>

    </body>
</html>